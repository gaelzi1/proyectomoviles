<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2C2A25">

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:padding="24dp">

        <TextView android:id="@+id/tvNombre" android:text="Nombre" style="@style/TextViewStyle" />
        <TextView android:id="@+id/tvApellidos" android:text="Apellidos" style="@style/TextViewStyle" />
        <TextView android:id="@+id/tvEmail" android:text="Email" style="@style/TextViewStyle" />
        <TextView android:id="@+id/tvTelefono" android:text="Teléfono" style="@style/TextViewStyle" />
        <TextView android:id="@+id/tvGenero" android:text="Género" style="@style/TextViewStyle" />
        <TextView android:id="@+id/tvEstado" android:text="Estado" style="@style/TextViewStyle" />
        <TextView android:id="@+id/tvFechaNacimiento" android:text="Fecha de nacimiento" style="@style/TextViewStyle" />
    </LinearLayout>
</ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>