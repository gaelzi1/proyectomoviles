<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E1E1E">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal">

            <!-- Título -->
            <TextView
                android:id="@+id/tvTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mi Perfil"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="24dp" />

            <!-- Contenedor de datos -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                android:backgroundTint="#2C2A25"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvNombre"
                        style="@style/PerfilCampo"
                        android:text="Nombre: Gael" />

                    <TextView
                        android:id="@+id/tvApellidos"
                        style="@style/PerfilCampo"
                        android:text="Apellidos: González Pérez" />

                    <TextView
                        android:id="@+id/tvEmail"
                        style="@style/PerfilCampo"
                        android:text="Email: gael@email.com" />

                    <TextView
                        android:id="@+id/tvTelefono"
                        style="@style/PerfilCampo"
                        android:text="Teléfono: 442-123-4567" />

                    <TextView
                        android:id="@+id/tvGenero"
                        style="@style/PerfilCampo"
                        android:text="Género: Masculino" />

                    <TextView
                        android:id="@+id/tvEstado"
                        style="@style/PerfilCampo"
                        android:text="Estado: Querétaro" />

                    <TextView
                        android:id="@+id/tvFechaNacimiento"
                        style="@style/PerfilCampo"
                        android:text="Nacimiento: 01/01/2000" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>

