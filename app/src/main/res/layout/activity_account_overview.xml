<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#2C2A25"
    android:padding="16dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <!-- Logo -->
        <ImageView
            android:id="@+id/ic_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@android:drawable/ic_menu_revert"
            android:contentDescription="Back"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#D4CBA6"
            android:textSize="24sp"
            android:fontFamily="sans-serif-medium"/>
    </LinearLayout>

    <!-- Subtitle -->
    <TextView
        android:id="@+id/tv_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vista general de la cuenta."
        android:textColor="#D4CBA6"
        android:textSize="20sp"
        android:layout_marginVertical="12dp"/>

    <!-- Form Fields -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <!-- Nombre -->
        <EditText
            android:id="@+id/et_nombre"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Nombre(s):"
            android:text="Alberto"
            android:backgroundTint="#D4CBA6"
            android:textColor="#D4CBA6"
            android:textColorHint="#D4CBA6"/>

        <!-- Apellidos -->
        <EditText
            android:id="@+id/et_apellidos"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Apellidos:"
            android:text="Martínez Contreras"
            android:backgroundTint="#D4CBA6"
            android:textColor="#D4CBA6"
            android:textColorHint="#D4CBA6"
            android:layout_marginTop="8dp"/>

        <!-- Correo -->
        <EditText
            android:id="@+id/et_correo"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Correo:"
            android:text="AlbertMarCon@gmail.com"
            android:backgroundTint="#D4CBA6"
            android:textColor="#D4CBA6"
            android:textColorHint="#D4CBA6"
            android:layout_marginTop="8dp"/>

        <!-- Teléfono -->
        <EditText
            android:id="@+id/et_telefono"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Teléfono:"
            android:text="+52 998 234 1232"
            android:backgroundTint="#D4CBA6"
            android:textColor="#D4CBA6"
            android:textColorHint="#D4CBA6"
            android:layout_marginTop="8dp"/>

        <!-- Género -->
        <EditText
            android:id="@+id/et_genero"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Género:"
            android:text="Masculino"
            android:backgroundTint="#D4CBA6"
            android:textColor="#D4CBA6"
            android:textColorHint="#D4CBA6"
            android:layout_marginTop="8dp"/>

        <!-- Estado -->
        <EditText
            android:id="@+id/et_estado"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Estado:"
            android:text="Querétaro"
            android:backgroundTint="#D4CBA6"
            android:textColor="#D4CBA6"
            android:textColorHint="#D4CBA6"
            android:layout_marginTop="8dp"/>

        <!-- Nacimiento -->
        <EditText
            android:id="@+id/et_nacimiento"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Nacimiento:"
            android:text="01/11/1979"
            android:backgroundTint="#D4CBA6"
            android:textColor="#D4CBA6"
            android:textColorHint="#D4CBA6"
            android:layout_marginTop="8dp"/>

        <!-- Contraseña -->
        <EditText
            android:id="@+id/et_contrasena"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Contraseña:"
            android:text="••••••"
            android:backgroundTint="#D4CBA6"
            android:textColor="#D4CBA6"
            android:textColorHint="#D4CBA6"
            android:layout_marginTop="8dp"
            android:inputType="textPassword"/>
    </LinearLayout>

    <!-- Footer -->
    <TextView
        android:id="@+id/tv_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No utilices esta aplicación como tu principal fuente de información jurídica..."
        android:textColor="#D4CBA6"
        android:textSize="12sp"
        android:gravity="center"
        android:layout_marginTop="16dp"/>
</LinearLayout>